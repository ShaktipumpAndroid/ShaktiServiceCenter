<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/photo10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_shape_item"
                android:drawableEnd="@drawable/red_icn"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:text="Bill Photo"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:id="@+id/photo11"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_shape_item"
                android:drawableEnd="@drawable/red_icn"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:text="customer feedback form"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp" />
            <TextView
                android:id="@+id/photo12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_shape_item"
                android:drawableEnd="@drawable/red_icn"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:text="new product serial number"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp" />
            <TextView
                android:id="@+id/photo13"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_shape_item"
                android:drawableEnd="@drawable/red_icn"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:text="new product image"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp" />

            <EditText
                android:id="@+id/edtRemarkAMTID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/bg_shape_item"
                android:inputType="text"
                android:layout_gravity="top"
                android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                android:gravity="top"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:hint="Enter remark here"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />



            <EditText
                android:id="@+id/edtAmountId1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/bg_shape_item"
               android:inputType="number"
                android:digits="0123456789"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:hint="Enter Amount for item 1"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <EditText
                android:id="@+id/edtAmountId2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/bg_shape_item"
                android:inputType="number"
                android:digits="0123456789"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:hint="Enter Amount for item 2"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <EditText
                android:id="@+id/edtAmountId3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/bg_shape_item"
                android:inputType="number"
                android:digits="0123456789"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:hint="Enter Amount for item 3"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <RelativeLayout

                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_alignParentBottom="true"
                android:id="@+id/rlvButtonViewID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtBTNApproveSaveID"
                    android:layout_marginEnd="@dimen/_70sdp"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:background="@drawable/btn_shape_rounded_corner"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Save"

                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_16sdp"
                    />

            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

    </LinearLayout>



</RelativeLayout>
